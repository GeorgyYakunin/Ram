<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape
            android:dither="true"
            android:shape="rectangle" >
            <corners android:radius="5dp" />

            <solid android:color="#cad4d9" />
        </shape>
    </item>
    <item android:bottom="3dp" android:top="1dp" android:right="2dp" android:left="2dp">
        <shape
            android:dither="true"
            android:shape="rectangle" >
            <corners android:radius="5dp" />

            <solid android:color="#1091c7" />

            <padding
                android:bottom="9dp"
                android:left="9dp"
                android:right="9dp"
                android:top="9dp" />
        </shape>
    </item>

</layer-list>